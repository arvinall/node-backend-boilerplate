{
  "name": "node-backend-boilerplate",
  "version": "0.1.0",
  "description": "NodeJS backend boilerplate with custom development scripts",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node --project ./tsconfig.scripts.json ./scripts/dev.ts",
    "dev:compile": "ts-node --project ./tsconfig.scripts.json ./scripts/dev.ts --compile",
    "dev:build": "ts-node --project ./tsconfig.scripts.json ./scripts/dev.ts --build",
    "test": "TS_NODE_PROJECT='./tsconfig.ava.json' ava",
    "coverage": "TS_NODE_PROJECT='./tsconfig.ava.json' nyc ava",
    "format": "prettier --write ./src && eslint --fix ./src",
    "format:scripts": "prettier --write ./scripts && eslint --fix ./scripts",
    "lint": "eslint ./src",
    "start:dev": "ts-node ./src/index.ts",
    "start": "node .",
    "clean": "rimraf ./dist",
    "build": "rollup -c",
    "build:mini": "ROLLUP_TERSER=true rollup -c"
  },
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "ava",
    "nyc",
    "istanbul",
    "rollup",
    "eslint",
    "prettier",
    "dotenv",
    "testdouble",
    "td",
    "ts-node",
    "boilerplate"
  ],
  "author": "Arvinall <arvinall021@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/node": "^14.14.7",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "ava": "^3.13.0",
    "chokidar": "^3.4.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-sizes": "^1.0.3",
    "rollup-plugin-terser": "^7.0.2",
    "testdouble": "^3.16.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
